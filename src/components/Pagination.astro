---
interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl: string;
}

const { currentPage, totalPages, baseUrl } = Astro.props;
---

<nav class="flex justify-center gap-4 mt-12">
  {currentPage > 1 && (
    <a
      href={`${baseUrl}${currentPage - 1}`}
      class="px-4 py-2 bg-ctp-surface1 rounded hover:bg-ctp-surface2"
    >
      Previous
    </a>
  )}
  {currentPage < totalPages && (
    <a
      href={`${baseUrl}${currentPage + 1}`}
      class="px-4 py-2 bg-ctp-surface1 rounded hover:bg-ctp-surface2"
    >
      Next
    </a>
  )}
</nav>