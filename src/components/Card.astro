---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card group rounded-lg border border-transparent px-5 py-4 transition-colors hover:border-ctp-surface2 hover:bg-ctp-surface0">
	<a href={href}>
		<h2 class="mb-3 text-2xl font-semibold">
			{title}{' '}
			<span class="inline-block transition-transform group-hover:translate-x-1 motion-reduce:transform-none">
				-&gt;
			</span>
		</h2>
		<p class="m-0 max-w-[30ch] text-sm opacity-50">
			{body}
		</p>
	</a>
</li>
